# SME Management Backend - Environment Variables Template
# ============================================================================
# INSTRUCTIONS: Copy this file to .env and update with your values
# WARNING: Never commit .env files to git!
# ============================================================================

# Database Configuration
DATABASE_URL=postgresql://username:password@host:port/database
# Example: postgresql://postgres:yourpassword@localhost:5432/sme_management_dev

# Security
SECRET_KEY=your-super-secret-key-here-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Configuration (adjust for your frontend URLs)
CORS_ORIGINS=["http://localhost:5173","http://localhost:3000"]

# Environment
ENVIRONMENT=development
DEBUG=True
LOG_LEVEL=INFO

# ============================================================================
# PRODUCTION NOTES:
# - Use strong SECRET_KEY (generate with: openssl rand -hex 32)
# - Set ENVIRONMENT=production
# - Set DEBUG=False
# - Update CORS_ORIGINS with your production domains
# - Use secure DATABASE_URL from Railway or your provider
# ============================================================================
